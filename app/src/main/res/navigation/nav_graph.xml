<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/welcomeFragment">

    <fragment
        android:id="@+id/chooseDateFragment"
        android:name="org.pocketx.knell.ui.ChooseDateFragment"
        android:label="fragment_choosedate"
        tools:layout="@layout/fragment_choosedate">
        <action
            android:id="@+id/action_chooseDateFragment_to_knellFragment"
            app:clearTask="true"
            app:destination="@id/knellFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/knellFragment"
        android:name="org.pocketx.knell.ui.KnellFragment"
        android:label="fragment_knell"
        tools:layout="@layout/fragment_knell">
        <action
            android:id="@+id/action_knellFragment_to_chooseDateFragment"
            app:clearTask="true"
            app:destination="@id/chooseDateFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="org.pocketx.knell.ui.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_chooseDateFragment"
            app:clearTask="true"
            app:destination="@+id/chooseDateFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_welcomeFragment_to_knellFragment"
            app:clearTask="true"
            app:destination="@id/knellFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
</navigation>